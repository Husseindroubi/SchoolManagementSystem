@model Topic

<br />
<br />
<br />
<br />
<br />

@if(User.IsInRole("Teacher"))
{
<h1 class="text-white">Delete Topic</h1>
<div>
    <h3 class="text-white">Are you sure you want to delete this Topic?</h3>
    <dl class="row text-white">
            <dt class="col-sm-2">DayOfWeek</dt>
            <dd class="col-sm-10">@Model.DayOfWeek</dd>
            <dt class="col-sm-2">StartTime</dt>
            <dd class="col-sm-10">@Model.StartTime</dd>
            <dt class="col-sm-2">EndTime</dt>
            <dd class="col-sm-10">@Model.EndTime</dd>
            <dt class="col-sm-2">TeacherName</dt>
            <dd class="col-sm-10">@Model.TeacherName</dd>
            <dt class="col-sm-2">Subject</dt>
            <dd class="col-sm-10">@Model.Subject</dd>
    </dl>
    <form asp-controller="Topic" asp-action="Delete" method="post">
        <input type="hidden" asp-for="TopicId" />
        <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
}
else
{
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}
