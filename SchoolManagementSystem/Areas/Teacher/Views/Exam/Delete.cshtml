@model Exam

<br />
<br />
<br />
<br />
<br />

@if(User.IsInRole("Teacher"))
{
<h1 class="text-white">Delete Exam</h1>
<div>
    <h3 class="text-white">Are you sure you want to delete this Exam?</h3>
    <dl class="row text-white">
            <dt class="col-sm-2">Exam Date</dt>
            <dd class="col-sm-10">@Model.ExamDate</dd>
            <dt class="col-sm-2">Class Name</dt>
            <dd class="col-sm-10">@Model.ClassName</dd>
            <dt class="col-sm-2">Subject</dt>
            <dd class="col-sm-10">@Model.Subject</dd>
            <dt class="col-sm-2">Content</dt>
            <dd class="col-sm-10">@Model.Content</dd>
    </dl>
    <form asp-controller="Exam" asp-action="Delete" method="post">
        <input type="hidden" asp-for="ExamId" />
        <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
}
else
{
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}
