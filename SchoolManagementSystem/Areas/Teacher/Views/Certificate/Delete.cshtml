@model Certificate

<br />
<br />
<br />
<br />
<br />

@if(User.IsInRole("Teacher"))
{
<h1 class="text-white">Delete Certificate</h1>
<div>
    <h3 class="text-white">Are you sure you want to delete this Certificate?</h3>
    <dl class="row text-white">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
            <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
            <dt class="col-sm-2">Issue Date</dt>
        <dd class="col-sm-10">@Model.IssueDate.ToShortDateString()</dd>
            <dt class="col-sm-2">ExpiryDate</dt>
            <dd class="col-sm-10">@Model.ExpiryDate</dd>
            <dt class="col-sm-2">Recipient</dt>
            <dd class="col-sm-10">@Model.RecipientName</dd>
            <dt class="col-sm-2">IssuerName</dt>
            <dd class="col-sm-10">@Model.IssuerName</dd>
    </dl>
    <form asp-controller="Certificate" asp-action="Delete" method="post">
        <input type="hidden" asp-for="CertificateId" />
        <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
}
else
{
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}
