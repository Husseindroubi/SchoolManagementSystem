@model Certificate

<br />
<br />
<br />
<br />
<br />

@if(User.IsInRole("Teacher"))
{
    <h1 class="text-white">Edit Certificate</h1>
    <form asp-controller="Certificate" asp-action="Edit" method="post">
        <input type="hidden" asp-for="CertificateId" />
        <div class="form-group">
            <label class="text-white">Title:</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-white">Description:</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-white">Issue Date:</label>
            <input asp-for="IssueDate" class="form-control" />
            <span asp-validation-for="IssueDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-white">Expiry Date:</label>
            <textarea asp-for="ExpiryDate" class="form-control"></textarea>
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-white">Recipient:</label>
            <input asp-for="RecipientName" class="form-control" />
            <span asp-validation-for="RecipientName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-white">Issuer:</label>
            <textarea asp-for="IssuerName" class="form-control"></textarea>
            <span asp-validation-for="IssuerName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
}
else
{
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}

