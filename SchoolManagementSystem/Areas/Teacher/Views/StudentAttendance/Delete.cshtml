@model StudentAttendance

<br />
<br />
<br />
<br />
<br />

@if (User.IsInRole("Teacher"))
{
<h1 class="text-white">Delete Attendance</h1>
<div>
    <h3 class="text-white">Are you sure you want to delete this StudentAttendance?</h3>
    <dl class="row text-white">
            <dt class="col-sm-2">Student Name</dt>
            <dd class="col-sm-10">@Model.StudentName</dd>
            <dt class="col-sm-2">Class Name</dt>
            <dd class="col-sm-10">@Model.ClassName</dd>
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
            <dt class="col-sm-2">Is Present</dt>
            <dd class="col-sm-10">@Model.IsPresent</dd>
    </dl>
    <form asp-controller="StudentAttendance" asp-action="Delete" method="post">
        <input type="hidden" asp-for="StudentAttendanceId" />
        <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
}
else
{
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}
