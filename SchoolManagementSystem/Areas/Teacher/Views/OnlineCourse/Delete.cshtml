@model OnlineCourse

<br />
<br />
<br />
<br />
<br />

@if (User.IsInRole("Teacher"))
{
<h1 class="text-white">Delete Course</h1>
<div>
    <h3 class="text-white">Are you sure you want to delete this Online Course?</h3>
    <dl class="row text-white">
            <dt class="col-sm-2">Course Name</dt>
            <dd class="col-sm-10">@Model.CourseName</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>
            <dt class="col-sm-2">Instructor</dt>
            <dd class="col-sm-10">@Model.InstructorName</dd>
            <dt class="col-sm-2">Start Date</dt>
            <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
            <dt class="col-sm-2">End Date</dt>
            <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
            <dt class="col-sm-2">Enrollment Limit</dt>
            <dd class="col-sm-10">@Model.EnrollmentLimit</dd>
    </dl>
    <form asp-controller="OnlineCourse" asp-action="Delete" method="post">
        <input type="hidden" asp-for="OnlineCourseId" />
        <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
}
else
{
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}
