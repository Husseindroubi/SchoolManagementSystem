@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="card shadow border border-primary mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-4">
        <div class="row justify-content-center">
            <div class="col-8 text-center">
                <h2 class="py-2 text-white">Sign up in School Genie</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-3 justify-content-center">
            <div class="col-8 text-center">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2>Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3 d-flex align-items-center">
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-light">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <div id="emailHelp" class="form-text text-bg-primary text-white ms-2">Required*</div>
                    </div>

                    <div class="form-floating mb-3 d-flex align-items-center">
                        <input asp-for="Input.Username" class="form-control" autocomplete="Username" aria-required="true" placeholder="Username" />
                        <label asp-for="Input.Username" class="text-light">Username</label>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                        <div id="emailHelp" class="form-text text-bg-primary text-white ms-2">Required*</div>
                    </div>

                    <div class="form-floating mb-3 d-flex align-items-center">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="text-light">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div id="emailHelp" class="form-text text-bg-primary text-white ms-2">Required*</div>
                    </div>

                    <div class="form-floating mb-3 d-flex align-items-center">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="text-light">Confirm Password</label>
                        <div id="emailHelp" class="form-text text-bg-primary text-white ms-2">Required*</div>
                    </div>

                    <div class="form-floating mb-3 d-flex align-items-center">
                        <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="phone" aria-required="true" placeholder="066xxxxxxxx" />
                        <label asp-for="Input.PhoneNumber" class="text-light">Phone Number</label>
                        <div id="emailHelp" class="form-text text-bg-light text-info ms-2">Optional</div>
                    </div>
                    <div class="form-floating mb-3 d-flex align-items-center">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                            <option disabled selected>-Select Role (Default: Student)</option>
                        </select>
                        <div id="emailHelp" class="form-text text-bg-light text-info ms-2">Optional</div>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
