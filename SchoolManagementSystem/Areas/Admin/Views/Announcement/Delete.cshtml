
@model Announcement

<br />
<br />
<br />
<br />
<br />

@if(User.IsInRole("Admin"))
{
<h1 class="text-white">Delete Announcement</h1>
<div>
    <h3 class="text-white">Are you sure you want to delete this announcement?</h3>
    <dl class="row text-white">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>
        <dt class="col-sm-2">Date Posted</dt>
        <dd class="col-sm-10">@Model.DatePosted.ToShortDateString()</dd>
    </dl>
    <form asp-controller="Announcement" asp-action="Delete" method="post">
        <input type="hidden" asp-for="AnnouncementId" />
        <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
}
else
{
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}
