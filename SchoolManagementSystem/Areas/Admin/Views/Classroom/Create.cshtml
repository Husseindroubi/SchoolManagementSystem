@model Classroom


<br />
<br />
<br />
<br />
<br />

@if (User.IsInRole("Admin"))
{
    <h1 class="text-white">Create a Classroom</h1>

    <form asp-controller="Classroom" asp-action="Create" method="post">
        <div class="form-group">
            <label class="text-white">Class Name:</label>
            <input asp-for="ClassroomName" class="form-control" />
            <span asp-validation-for="ClassroomName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-white">Description:</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
} else
{
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}

    
