@model Classroom

<br />
<br />
<br />
<br />
<br />

@if(User.IsInRole("Admin"))
{
<h1 class="text-white">Delete Classroom</h1>
<div>
    <h3 class="text-white">Are you sure you want to delete this Classroom?</h3>
    <dl class="row text-white">
            <dt class="col-sm-2">Class Name</dt>
        <dd class="col-sm-10">@Model.ClassroomName</dd>
            <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
    <form asp-controller="Classroom" asp-action="Delete" method="post">
        <input type="hidden" asp-for="ClassroomId" />
        <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
}
else
{
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}
