@model LibraryBook

<br />
<br />
<br />
<br />
<br />

@if (User.IsInRole("Employee"))
{
<h1 class="text-white">Delete Book</h1>
<div>
    <h3 class="text-white">Are you sure you want to delete this Book?</h3>
    <dl class="row text-white">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
            <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>
            <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>
            <dt class="col-sm-2">Is Available</dt>
            <dd class="col-sm-10">@Model.IsAvailable</dd>
            <dt class="col-sm-2">Is ImagePath</dt>
            <dd class="col-sm-10">@Model.ImagePath</dd>
    </dl>
    <form asp-controller="LibraryBook" asp-action="Delete" method="post">
        <input type="hidden" asp-for="LibraryBookId" />
        <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
}
else
{
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
}
